<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="24sp"
    tools:context="edu.rose_hulman.weih.forsport.SettingFragment">


    <ImageView
        android:id="@+id/HeadimageView"
        android:layout_width="108sp"
        android:layout_height="108sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageButton
        android:id="@+id/HeadimageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_menu_manage" />

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/HeadimageView"
        android:layout_toLeftOf="@+id/NameButton"
        android:textSize="36sp"
        android:layout_marginBottom="12sp"
        android:text="haha"/>

    <ImageButton
        android:id="@+id/NameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/HeadimageView"
        app:srcCompat="@drawable/ic_menu_manage" />

    <TextView
        android:id="@+id/phone_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_text_view"
        android:layout_toLeftOf="@+id/NameButton"
        android:textSize="24sp"
        android:layout_marginBottom="12sp"
        android:text="haha"/>

    <ImageButton
        android:id="@+id/PhoneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_text_view"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_menu_manage" />

    <TextView
        android:id="@+id/email_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_text_view"
        android:layout_toLeftOf="@+id/NameButton"
        android:textSize="24sp"
        android:layout_marginBottom="12sp"
        android:text="haha"/>

    <ImageButton
        android:id="@+id/EmailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_text_view"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_menu_manage" />

    <Button
        android:id="@+id/ComButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EmailButton"
        android:layout_alignParentRight="true"
        android:text="@string/comfirm"
        />

</RelativeLayout>
